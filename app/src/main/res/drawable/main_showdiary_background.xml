<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer background with rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/teal_bright" /> <!-- 배경색 설정 -->
            <corners android:radius="10dp" /> <!-- 둥근 테두리 설정 -->
        </shape>
    </item>

    <!-- Black border -->
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#B6B6B6" /> <!-- 테두리 색상 설정 -->
            <corners android:radius="10dp" /> <!-- 둥근 테두리 설정 -->
        </shape>
    </item>

</layer-list>